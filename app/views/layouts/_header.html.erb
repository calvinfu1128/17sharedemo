<header class="header">
    <div class="top-bar">
        <div class="top-bar-left">
            <!--breadcrumb-->
        </div>
        <div class="top-bar-right">
            <ul>
              <% if current_user %>
                <li><%= link_to "上載照片", assets_path %></li>
                <li><%= link_to "修改資料", edit_user_path(current_user.id) %></li>
                <li><%= link_to "登出", :logout, method: :post %></li>
              <% else %>
                <li><a href="#" id="signup">登記</a></li>
                <li><a href="#" id="login">登入</a></li>
                <!--<li><%= link_to "登記", new_user_path, :id => "register" %></li>
                    <li><%= link_to "登入", :login, :id => "login" %></li>-->
              <% end %>
