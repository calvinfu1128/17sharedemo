<!DOCTYPE html>
<html>
  <head>
    <title>17Share</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <%= stylesheet_link_tag    "application" %>
      <%= stylesheet_link_tag    "main" %>
      <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css">
      <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
      <%= csrf_meta_tags %>
  </head>
  <body>
  <%= render 'layouts/header' %>
  <%= render 'layouts/main' %>
  <%= yield %>

  <%= link_to "Upload photos", assets_path %>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

  <%= render 'layouts/footer' %>

  <%= javascript_include_tag "application" %>

  <!-- mobile menu -->
  <script type="text/javascript">
      jQuery(function($){
               $( '.menu-btn' ).click(function(){
               $('.responsive-menu').slideToggle('expand')
               })
          })
  </script>
  <!-- remove facebook ugly url -->
  <script type="text/javascript">
      (function() {
        $(function() {
          if (window.location.hash && window.location.hash === '#_=_') {
            window.location.hash = '';
            return history.pushState('', document.title, window.location.pathname);
          }
        });
      }).call(this);
  </script>
  <!-- dialog modal -->
  <script>
      $( "#signup-form" ).dialog({ autoOpen: false });
      $( "#signup" ).click(function() {
        $( "#signup-form" ).dialog( "open" );
      });
  </script>

  <script>
      $( "#login-form" ).dialog({ autoOpen: false });
      $( "#login" ).click(function() {
        $( "#login-form" ).dialog( "open" );
      });
  </script>
  <script>
      $( "#signup-form" ).dialog({
        "resize", "auto"
      });
      $( "#login-form" ).dialog({
        "resize", "auto"
      });
  </script>
  <script>
      $( "#signup-form" ).dialog({
        modal: true
      });
      $( "#login-form" ).dialog({
        modal: true
      });
  </script>

  </body>
</html>
